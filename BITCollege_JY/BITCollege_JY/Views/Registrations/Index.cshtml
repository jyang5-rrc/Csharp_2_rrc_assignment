@model IEnumerable<BITCollege_JY.Models.Registration>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr id="multiword_headings">
        @*title*@
        <th>
            @Html.DisplayNameFor(model => model.Course.Title)
        </th>
        @*name*@
        <th>
            @Html.DisplayNameFor(model => model.Student.FullName)
        </th>
        @*RegistrationNumber*@
        <th>
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </th>
        @*date*@
        <th>
            @Html.DisplayNameFor(model => model.RegistrationDate)
        </th>
        @*grade*@
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        @*notes*@
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RegistrationId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RegistrationId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RegistrationId })
        </td>
    </tr>
}

</table>
